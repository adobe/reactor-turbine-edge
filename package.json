{
  "name": "reactor-turbine-edge",
  "version": "0.0.1",
  "description": "Launch rule engine which processes rules on client websites and delegates logic to extensions.",
  "license": "Apache-2.0",
  "main": "src/index.js",
  "scripts": {
    "build": "rollup -c && terser dist/engine-server.js -c -m -o dist/engine-server.min.js",
    "build:watch": "touch ./dist/engine-server.js & rollup --watch -c & watch -f ./dist/engine-server.js -r './node_modules/.bin/terser ./dist/engine-server.js -c -m -o ./dist/engine-server.min.js'",
    "prepublishOnly": "npm run build",
    "lint": "eslint 'src/**'",
    "format": "pretty-quick",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": {
    "name": "Adobe Systems",
    "url": "http://adobe.com",
    "email": "reactor@adobe.com"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@git.corp.adobe.com:reactor/reactor-turbine-server.git"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@testing-library/jest-dom": "^5.11.1",
    "camelize": "1.0.0",
    "cli-watch": "^1.0.7",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest-dom": "^3.1.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-testing-library": "^3.3.2",
    "inject-loader": "^4.0.1",
    "jest": "^26.1.0",
    "jest-runner-eslint": "^0.10.0",
    "kebab-case": "1.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "proxyquire": "^2.1.3",
    "rollup": "^2.23.0",
    "terser": "^4.8.0"
  }
}
