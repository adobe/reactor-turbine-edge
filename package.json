{
  "name": "reactor-turbine-server",
  "version": "0.0.1",
  "description": "Launch rule engine which processes rules on client websites and delegates logic to extensions.",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rollup -c && terser dist/engine-server.js -c -m -o dist/engine-server.min.js",
    "build:watch": "touch ./dist/engine-server.js & rollup --watch -c & watch -f ./dist/engine-server.js -r './node_modules/.bin/terser ./dist/engine-server.js -c -m -o ./dist/engine-server.min.js'",
    "prepublishOnly": "npm run build",
    "test": "karma start",
    "test:watch": "npm test -- --no-single-run --no-coverage",
    "lint": "eslint 'src/**/*.js'"
  },
  "author": {
    "name": "Adobe Systems",
    "url": "http://adobe.com",
    "email": "reactor@adobe.com"
  },
  "repository": {
    "type": "git",
    "url": "git@git.corp.adobe.com:reactor/reactor-turbine-server.git"
  },
  "devDependencies": {
    "camelize": "1.0.0",
    "cli-watch": "^1.0.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "inject-loader": "^4.0.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.5.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^3.1.1",
    "karma-jasmine-matchers": "^4.0.2",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^2.0.2",
    "karma-webpack": "^4.0.2",
    "kebab-case": "1.0.0",
    "prettier": "^1.19.1",
    "rollup": "^1.31.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "terser": "^4.6.3",
    "webpack": "^4.41.6",
    "yargs": "^15.1.0"
  }
}
