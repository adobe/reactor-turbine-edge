const camelCase = require('camelize');
const kebabCase = require('kebab-case');

module.exports = {
  extensionName: 'test-extension',
  createModule(name, scriptFn) {
    const cName = camelCase(name);
    const kName = kebabCase(name);

    return [
      this.getPath(cName),
      {
        name: kName,
        displayName: name,
        script: scriptFn
      },
      this.extensionName
    ];
  },

  getPath(name) {
    return `${this.extensionName}/${camelCase(name)}.js`;
  }
};
